<template xmlns="http://ws.apache.org/ns/synapse" name="CsvToJson">
    <parameter name="useHeaderAsKeys" description="Use CSV header as Json Keys"/>
    <parameter name="header" description="Comma separated string of header for Json Object keys"/>
    <parameter name="emptyValueAsNull" description="Treat empty cell value as a null json primitive"/>
    <parameter name="dataTypes" description="Specify data String data types as comma separated values"/>
    <sequence>
        <property name="useHeaderAsKeys" expression="$func:useHeaderAsKeys"/>
        <property name="header" expression="$func:header"/>
        <property name="emptyValueAsNull" expression="$func:emptyValueAsNull"/>
        <property name="dataTypes" expression="$func:dataTypes"/>
        <class name="org.wso2.carbon.module.csv.CsvToJsonConverter"/>
    </sequence>
</template>