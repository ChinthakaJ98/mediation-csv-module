<template xmlns="http://ws.apache.org/ns/synapse" name="CsvToXml">
    <parameter name="useHeaderAsKeys" description="Use CSV header as XML tag names"/>
    <parameter name="header" description="Comma separated string of header for XML tag names"/>
    <parameter name="rootElementName" description="Name of the root xml element"/>
    <parameter name="rootElementNamespaceURI" description="Namespace prefix for root element"/>
    <parameter name="rootElementNamespace" description="Namespace URI for root element"/>
    <parameter name="childElementName" description="Name of the children xml elements"/>
    <sequence>
        <property name="header" expression="$func:header"/>
        <property name="linesToSkip" expression="$func:linesToSkip"/>
        <property name="rootElementName" expression="$func:rootElementName"/>
        <property name="rootElementNamespaceURI" expression="$func:rootElementNamespaceURI"/>
        <property name="rootElementNamespace" expression="$func:rootElementNamespace"/>
        <property name="childElementName" expression="$func:childElementName"/>
        <class name="org.wso2.carbon.module.csv.CsvToXmlConverter"/>
    </sequence>
</template>